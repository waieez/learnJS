<!Doctype html>
<html ng-app="ToDoApp">
<head>
	<title>Learn Angular</title>
	<script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.8/angular.min.js'></script>
	<script src="app.js"></script>
</head>
<body>
	<div ng-controller="ToDoCtrl">
	<form ng-submit="submit(task)">
		<input type="text" ng-model="task" placeholder="Remind me to do this"></input>
		<input type="submit"></input>
	</form>
	<ul>
		<li ng-repeat="task in Tasks">
			<div ng-hide="task.edit" ng-dblclick="editTask(task)">{{task.task}}</div>
			<form ng-show="task.edit" ng-submit="saveEdit(task)" ng-model-options="{ updateOn: 'submit' }">
				<input type="text" ng-model="task.task" ng-blur="cancelEdit(task)"></input>
				<input ng-show="" type="submit"></input>
			</form>
		</li>
	</ul>
</body>
</html>